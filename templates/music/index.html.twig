{% extends 'base.html.twig' %}

{% block title %}Music index{% endblock %}

{% block body %}
    <h1 class="text-center">ALBUM</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Album</th>
                <th>Name</th>
                <th>ReleaseDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for music in music %}
            <tr>
                <td><img style="height: 250px; " src="{{ asset('uploads/covers/') ~ music.cover }}" class="logo" alt=""></td>
                <td>{{ music.name }}</td>
                <td>{{ music.releaseDate ? music.releaseDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_music_show', {'id': music.id}) }}">show</a>
                    {% if is_granted("ROLE_ADMIN")  %}
                    <a href="{{ path('app_music_edit', {'id': music.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN")  %}
    <a href="{{ path('app_music_new') }}">+ Create new</a>
    {% endif %}
{% endblock %}
